{
  "name": "PixelWeather",
  "version": "1.0.0",
  "description": "A pixelated weather widget for your desktop",
  "homepage": "https://aveek-saha.github.io",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "build"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "aveek-saha",
        "repo": "pixel-weather"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "maintainer": "Aveek <aveek.s98@gmail.com>",
      "icon": "build"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "repository": "https://github.com/Aveek-Saha/pixel-weather",
  "author": "Aveek Saha <aveek.s98@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "5.0.4",
    "electron-builder": "20.38.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "electron-json-storage": "^4.1.6",
    "electron-positioner": "^4.1.0"
  }
}
